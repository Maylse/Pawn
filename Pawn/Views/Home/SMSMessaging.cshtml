@{
}
@{
    ViewData["Title"] = "SMSMessaging";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="container rounded bg-white mt-2 mb-5">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-light">
            <input type="radio" name="options" id="option1" autocomplete="off"> SMS Modem Configuration
        </label>
        <label class="btn btn-light active">
            <input type="radio" name="options" id="option2" autocomplete="off" checked> SMS Default Messaging
        </label>
    </div>

    <div class="d-flex flex-column my-3">
        <div class="col-md-10 input-group my-2">
            <span class="input-group-text">Pawn Ticket Default Message</span>
            <input type="text" class="form-control" placeholder="Message here..." value="">
        </div>

        <div class="col-md-10 input-group my-2">
            <span class="input-group-text">Renewal Default Message</span>
            <input type="text" class="form-control" placeholder="Message here..." value="">
        </div>

        <div class="col-md-10 input-group my-2">
            <span class="input-group-text">Redemption Default Message</span>
            <input type="text" class="form-control" placeholder="Message here..." value="">
        </div>  
    </div>
    <div class="col-md-5 my-2">
        <button class="btn btn-primary profile-button" type="button">Confirm</button>
    </div>
</div>
